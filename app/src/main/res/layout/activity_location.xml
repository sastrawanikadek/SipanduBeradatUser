<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarThumbVertical="@null"
    tools:context=".activities.LocationActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/fragment_top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.sipanduberadat.user.fragments.TopAppBarFragment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?actionBarSize"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/negara" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/negara"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Indonesia"
                android:textColor="?colorAccent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/provinsi" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/provinsi"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Bali"
                android:textColor="?colorAccent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/kabupaten" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/kabupaten"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Gianyar"
                android:textColor="?colorAccent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/kecamatan" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/kecamatan"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Gianyar"
                android:textColor="?colorAccent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/desa_adat" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/desa_adat"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Gianyar"
                android:textColor="?colorAccent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/banjar" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/banjar"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Gianyar"
                android:textColor="?colorAccent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/ubah"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                app:elevation="0dp" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</ScrollView>