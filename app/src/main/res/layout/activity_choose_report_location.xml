<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChooseReportLocationActivity">

    <fragment
        android:id="@+id/fragment_top_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.sipanduberadat.user.fragments.TopAppBarFragment" />

    <fragment
        android:id="@+id/map_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_check"
        android:contentDescription="@string/ubah_lokasi"
        app:tint="@color/white"
        app:backgroundTint="@color/red_700" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>